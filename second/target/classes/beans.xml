<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns = "http://www.springframework.org/schema/beans"
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

   <bean id = "inject" class = "com.pack.InjectCollection" >
      <property name="name1">
      <list>
      <value>ram</value>
      <value>sam</value>
      <value>raj</value>
      <value>ram</value>
      </list>
      </property>
      <property name="name2">
      <set>
      <value>ram</value>
      <value>sam</value>
      <value>raj</value>
      <value>ram</value>
      </set>
      </property>
      <property name="name3">
      <map>
      <entry key="1" value="ram"/>
      <entry key="2" value="sam"/>
      <entry key="3" value="raj"/>
      <entry key="4" value="ram"/>
      </map>
      </property>
       <property name="name4">
      <props>
      <prop key="one">ram</prop>
      <prop key="two">sam</prop>
      <prop key="three">raj"</prop>
      <prop key="four">ram</prop>
      </props>
      </property>
   </bean>

</beans>